<%- include('../partials/head') %>

</head>
<body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Header with navigation -->
    
<%- include('../partials/header') %>
    <!-- Main Content -->
    <main class="max-w-4xl mx-auto p-6 mt-6 bg-white rounded-xl shadow-md">
        

        <h2 class="text-xl font-semibold text-red-600 text-center mb-4">Here are our registered homes:</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-6 py-4">
  <% registeredHomes.forEach(home => { %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.pexels.com%2Fsearch%2Fhouse%2F&psig=AOvVaw1HRx_dJD0Wo58T0kVqxycC&ust=1753209597923000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCIDhyuzMzo4DFQAAAAAdAAAAABAE" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
      <div class="p-4">
        <h2 class="text-xl font-semibold text-gray-800 mb-1"><%= home.houseName %></h2>
        <p class="text-sm text-gray-600 mb-1"><span class="font-medium">Location:</span> <%= home.location %></p>
        <p class="text-sm text-gray-600 mb-1"><span class="font-medium">Price:</span> ₹<%= home.price %> / night</p>
        <p class="text-sm text-gray-600"><span class="font-medium">Rating:</span> <%= home.rating %> ⭐</p>
      </div>
    </div>
  <% }) %>
</div>

    </main>
</body>
</html>
