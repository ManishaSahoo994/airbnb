<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto p-6 mt-10 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-red-600 text-center mb-8">Home Detail Page</h2>

        <div class="flex flex-col sm:flex-row gap-6 items-start">
            <!-- Left: Image -->
            <div class="w-full sm:w-1/2">
                <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="rounded-lg shadow-md w-full h-auto object-cover">
            </div>

            <!-- Right: Details -->
            <div class="w-full sm:w-1/2 space-y-4">
                <h3 class="text-2xl font-semibold text-gray-800"><%= home.houseName %></h3>
                <p class="text-sm text-gray-700"><span class="font-semibold">Location:</span> <%= home.location %></p>
                <p class="text-sm text-gray-700"><span class="font-semibold">Price:</span> ₹<%= home.price %> / night</p>
                <p class="text-sm text-gray-700"><span class="font-semibold">Rating:</span> <%= home.rating %> ⭐</p>
                <%- include('../partials/favourites') %>
        </div>
       </div>
    </main>
</body>
</html>
