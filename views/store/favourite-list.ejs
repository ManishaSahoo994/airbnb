<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto p-4 mt-6 bg-white rounded-lg shadow-md">
        <h2 class="text-xl font-bold text-red-600 text-center mb-6">Here are your favourite homes:</h2>

        <div class="flex flex-wrap justify-center gap-4">
            <% favouriteHomes.forEach(home => { %>
                <div class="w-full sm:w-64 bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
                    <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-32 object-cover">
                    <div class="p-3">
                        <h3 class="text-md font-semibold text-gray-800 mb-1 truncate"><%= home.houseName %></h3>
                        <p class="text-xs text-gray-600"><span class="font-medium">Location:</span> <%= home.location %></p>
                        <p class="text-xs text-gray-600"><span class="font-medium">Price:</span> ₹<%= home.price %> / night</p>
                        <p class="text-xs text-gray-600 mb-2"><span class="font-medium">Rating:</span> <%= home.rating %> ⭐</p>
                        </div>
                       <form action="/favourites/delete/<%= home.id %>" method="post">
                        <button type="submit" class="w-full bg-red-500 text-white text-sm py-1 rounded transition hover:bg-red-600">Remove</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>
